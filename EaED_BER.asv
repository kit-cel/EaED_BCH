function [ber] = EaED_BER(DTP, Pfail, n, delta, ep)
    ber = 0;
    for U=0:size(DTP,1)-1
        for E=0:size(DTP,2)-1
            for R=0:size(DTP,3)-1
                pe = nck(n,U)*nck(n-U,E)*(delta^U)*()*((1-p)^(n-U));
                ber = ber + R*pe*DTP(U+1,E+1,R+1);
                ber = ber + (U+E/2)*pe*Pfail(U+1,E+1);
            end
        end
    end
    ber = ber / n;

end

